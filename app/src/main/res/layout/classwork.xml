<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView android:id="@+id/txt_john"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:text="John McDonald"
              android:textSize="25sp"
              android:layout_marginTop="50dp"
              android:layout_marginLeft="30dp"
              android:textColor="#111111"/>

    <ImageView android:id="@+id/img_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/txt_john"
               app:layout_constraintLeft_toLeftOf="parent"
               android:src="@drawable/location"
               android:layout_marginLeft="50dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/txt_john"
              app:layout_constraintLeft_toLeftOf="@id/img_location"
              android:layout_marginLeft="30dp"
              android:text="Los Angles,CA"/>

    <ImageView android:layout_width="98dp"
               android:layout_height="126dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginRight="50dp"
               android:layout_marginTop="50dp"
               android:background="@drawable/rounded_img"
               android:src="@drawable/zukarbet"
    />

    <Button android:id="@+id/btn_follow"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_location"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_btn"
            android:textColor="#FFFFFF"
            android:text="follow"/>

    <TextView android:id="@+id/txt_post"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/btn_follow"
              app:layout_constraintLeft_toLeftOf="parent"
              android:textColor="#111111"
              android:textSize="18sp"
              android:layout_marginLeft="50dp"
              android:layout_marginTop="40dp"
              android:text="34"/>

    <TextView android:id="@+id/txt_post_value"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/txt_post"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginLeft="50dp"
              android:text="Posts"/>

    <TextView android:id="@+id/txt_followers"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/btn_follow"
              app:layout_constraintLeft_toLeftOf="@id/txt_post"
              android:textColor="#111111"
              android:textSize="18sp"
              android:layout_marginLeft="100dp"
              android:layout_marginTop="40dp"
              android:text="1256"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/txt_followers"
              app:layout_constraintLeft_toLeftOf="@id/txt_post_value"
              android:layout_marginLeft="100dp"
              android:text="Followers"/>

    <ImageView android:id="@+id/img_1"
               android:layout_width="90dp"
               android:layout_height="70dp"
               app:layout_constraintTop_toBottomOf="@id/txt_post"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="80dp"
               android:layout_marginLeft="18dp"
               android:src="@drawable/d"/>

    <ImageView android:id="@+id/img_2"
               android:layout_width="90dp"
               android:layout_height="70dp"
               app:layout_constraintTop_toBottomOf="@id/txt_followers"
               app:layout_constraintLeft_toLeftOf="@id/img_1"
               android:src="@drawable/bb"
               android:layout_marginTop="80dp"
               android:layout_marginLeft="90dp"/>
    <ImageView android:id="@+id/img_3"
               android:layout_width="90dp"
               android:layout_height="70dp"
               app:layout_constraintTop_toBottomOf="@id/txt_followers"
               app:layout_constraintLeft_toLeftOf="@id/img_2"
               android:layout_marginTop="80dp"
               android:layout_marginLeft="90dp"
               android:src="@drawable/c"/>
    <ImageView android:id="@+id/img_4"
               android:layout_width="90dp"
               android:layout_height="70dp"
               app:layout_constraintTop_toBottomOf="@id/txt_followers"
               app:layout_constraintLeft_toLeftOf="@id/img_3"
               android:layout_marginTop="80dp"
               android:layout_marginLeft="90dp"
               android:layout_marginRight="20dp"
               android:src="@drawable/d"/>

    <ImageView android:id="@+id/lang_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/img_1"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginLeft="55dp"
               android:layout_marginTop="20dp"
               android:src="@drawable/lang"/>

    <ImageView android:id="@+id/card_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/img_1"
               app:layout_constraintLeft_toLeftOf="@id/lang_icon"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="20dp"
               android:src="@drawable/card"/>

    <ImageView android:id="@+id/home_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/img_1"
               app:layout_constraintLeft_toLeftOf="@id/card_icon"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="20dp"
               android:src="@drawable/home"/>

    <ImageView android:id="@+id/phone_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/img_1"
               app:layout_constraintLeft_toLeftOf="@id/home_icon"
               android:layout_marginLeft="90dp"
               android:layout_marginTop="20dp"
               android:src="@drawable/phone"/>

    <View android:id="@+id/line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          app:layout_constraintTop_toBottomOf="@id/home_icon"
          app:layout_constraintLeft_toLeftOf="parent"
          android:background="#111111"
          android:layout_marginTop="30dp"/>

    <TextView android:id="@+id/txt_about"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/line"
              app:layout_constraintLeft_toLeftOf="parent"
              android:textSize="30sp"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="30dp"
              android:textColor="#111111"
              android:text="About"/>

    <TextView android:layout_width="350dp"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/txt_about"
              app:layout_constraintLeft_toLeftOf="parent"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="20dp"
              android:textColor="#3F51B5"
              android:text="We're all a little weired.And life is a little weired.And when we find someone whose weirdness is compatible with ours,we join up with them and fall into mutually satisfying weirdness and call it love true love."/>
</androidx.constraintlayout.widget.ConstraintLayout>